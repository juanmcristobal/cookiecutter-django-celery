FROM python:{{ cookiecutter.python_version }}-slim AS builder
WORKDIR /app
ENV PIP_DISABLE_PIP_VERSION_CHECK=1 PIP_NO_CACHE_DIR=1
COPY pyproject.toml README.md /app/
COPY src /app/src
RUN python -m pip install --upgrade pip && \
    pip wheel --wheel-dir=/wheels ".[server]"

FROM python:{{ cookiecutter.python_version }}-slim
WORKDIR /app
ENV PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1 DJANGO_SETTINGS_MODULE={{ cookiecutter.project_slug|replace('-', '_') }}.server.settings
RUN useradd --create-home --uid 10001 appuser
COPY --from=builder /wheels /wheels
RUN python -m pip install --no-cache-dir --no-index --find-links=/wheels {{ cookiecutter.project_slug|replace('_', '-') }}[server] && \
    rm -rf /wheels
USER appuser
EXPOSE 8000
CMD ["gunicorn", "{{ cookiecutter.project_slug|replace('-', '_') }}.server.wsgi:application", "--bind", "0.0.0.0:8000", "--workers", "3", "--access-logfile", "-", "--error-logfile", "-"]
# For ASGI instead of WSGI:
# uvicorn {{ cookiecutter.project_slug|replace('-', '_') }}.server.asgi:application --host 0.0.0.0 --port 8000 --proxy-headers
